<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="820" d:DesignHeight="390"
        x:Class="ZhoskaRabotaem.Views.RegWindow"
        Icon="/Assets/favicon.ico"
        Title="ZhoskaRabotaem"
        WindowStartupLocation="CenterScreen"
        MaxHeight="300" MaxWidth="500" MinHeight="300" MinWidth="500" >
    
    <Window.Styles>
        <Style Selector="Window">
            <Setter Property="Background" Value="#181A21"/>
            <Setter Property="Padding" Value="20"/>

        </Style>
    </Window.Styles>
    
    
    
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            
            <StackPanel.Styles>
                
                <Style Selector="Button:pointerover /template/ ContentPresenter">
                    <Setter Property="TextBlock.Foreground" Value="White"/>
                    <Setter Property="Background" Value="#2D73FF"/>
                </Style>
                
             
                
                <Style Selector="TextBox">
                    <Setter Property="Background" Value="#32353c"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="CornerRadius" Value="0"/>
                    <Setter Property="Padding" Value="10"/> 
                </Style>
                
                <Style Selector="Border" >
                    <Setter Property="Background" Value="#32353c"/>
                </Style>
                
                <Style Selector="TextBox:IsPointerOver">
                    <Setter Property="Background" Value="#32353c"/>
                </Style>
             
                
                <Style Selector="TextBlock">
                    <Setter Property="Foreground" Value="#1999ff"/>
                    <Setter Property="FontWeight" Value="500"/>
                    <Setter Property="FontSize" Value="12"/> 
                    <Setter Property="LetterSpacing" Value="0.4"/> 
                </Style>
                
            </StackPanel.Styles>
            
            
            <TextBlock
                Text="Вход"  
                HorizontalAlignment="Center"
                VerticalAlignment="Top" 
                FontSize="32" />


            

           
            
            <TextBox   
                Name="CodeTextBox" 
                Width="290" 
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Height="40"
                Margin="15" 
                Watermark="Код"
                HorizontalContentAlignment="Center"/>
            
            
            <Button 
                Name="Signin_Button" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom"
                Content="Войти" 
                Background="#2D73FF" 
                HorizontalContentAlignment="Center" 
                VerticalContentAlignment="Center" 
                Foreground="White" 
                Width="290" 
                Height="50" 
                CornerRadius="2 " 
                FontWeight="400" FontSize="16" 
                BorderBrush="Transparent"
                Margin="15"
                Click="Signin_click"
                />
            
            
        </StackPanel>
    

</Window>